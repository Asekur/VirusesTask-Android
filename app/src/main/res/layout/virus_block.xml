<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameCollectionVirus"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/border_spinner"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="Name"
        android:textColor="@color/font"
        android:textColorHint="@color/font"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/photoProfile"
        app:layout_constraintStart_toStartOf="@+id/photoProfile"
        app:layout_constraintTop_toBottomOf="@+id/photoProfile" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photoProfile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/font"
        app:layout_constraintBottom_toBottomOf="@+id/buttonSelectPhoto"
        app:layout_constraintEnd_toEndOf="@+id/buttonSelectPhoto"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/domainYearText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="Domain, Year"
        android:textColor="@color/font"
        android:textColorHint="@color/font"
        android:textSize="10sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nameCollectionVirus"
        app:layout_constraintStart_toStartOf="@+id/nameCollectionVirus"
        app:layout_constraintTop_toBottomOf="@+id/nameCollectionVirus"
        android:gravity="center_horizontal" />
</androidx.constraintlayout.widget.ConstraintLayout>